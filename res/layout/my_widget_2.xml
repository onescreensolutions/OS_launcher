<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/customView"
    android:layout_width="275dp"
    android:layout_height="130dp"
    android:background="@drawable/rounded_rectangle"
    android:padding="8dp"
    android:orientation="horizontal">

    <!-- First row above the ImageViews -->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:gravity="center">

        <ImageView
            android:layout_width="95dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/onescreenwidget" />

    </TableRow>

    <TableRow>
    <LinearLayout
        android:layout_width="73dp"
        android:layout_height="95dp"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/quiwiz"
            android:layout_width="73dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:src="@drawable/quizwiz" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="QuizWiz"
            android:textColor="@color/all_apps_tab_text"
            />
    </LinearLayout>

    <!-- Second ImageView with text -->
    <LinearLayout
        android:layout_width="85dp"
        android:layout_height="95dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/Lhub"
            android:layout_width="73dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:src="@drawable/lh" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Learning Hub"
            android:textColor="@color/all_apps_tab_text"
            />

    </LinearLayout>

    <!-- Third ImageView with text -->
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="6dp"
        android:layout_marginLeft="6dp"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/L_OS"
            android:layout_width="73dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:src="@drawable/lo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:text="Learn OneScreen"
            android:textColor="@color/all_apps_tab_text"
            />

    </LinearLayout>
    </TableRow>

</TableLayout>
