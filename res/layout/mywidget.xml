<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="310dp"
    android:layout_height="140dp"
    android:background="@drawable/rounded_rectangle"
    android:padding="8dp">

    <!-- First row above the ImageViews -->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:layout_width="98dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/g_workspace" />

    </TableRow>

    <!-- Second row with ImageViews and text -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TableRow
            >


            <!-- First ImageView with text -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/docsImageView"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/docs" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="Docs"
                    android:textColor="@color/all_apps_tab_text"
                    android:textSize="12dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Second ImageView with text -->
            <LinearLayout
                android:layout_width="73dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="0dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/sheetsImageView"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/sheets" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="Sheets"
                    android:textColor="@color/all_apps_tab_text"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Third ImageView with text -->
            <LinearLayout
                android:layout_width="73dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/slidesImageView"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/slides" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="Slides"
                    android:textColor="@color/all_apps_tab_text"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="73dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/classroomImageView"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/classroom" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:text="Classroom"
                    android:textColor="@color/all_apps_tab_text"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </TableRow>


    </TableRow>

</TableLayout>




